                MessageBox.Show("Select accceptance.");
                acceptanceComboBox.Focus();
                return false;
            }
            //else if (grrDataGridView.Rows.Count <= 0)
            //{
            //    MessageBox.Show("Enter GRR items.");
            //    return false;
            //}
            else
            {
                SetValues();
            }
